<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="agriscout">

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <origin xyz="-0.11 -0.1 -0.05" rpy="1.57 0 1.57"/>
            <geometry>
                <mesh filename="package://agriscout_description/meshes/chassis.STL" scale="0.001 0.001 0.001"/>
